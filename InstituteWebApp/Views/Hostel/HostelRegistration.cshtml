<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/CSS/Style.css")
    <script src="https://kit.fontawesome.com/3c03c97ac7.js" crossorigin="anonymous"></script>
    <title>Hostel Registration</title>
</head>

<body>
    <jsp:include page="nb-hostel.jsp"></jsp:include>
    <div id="content">
        <section>
            <h1>Hostel_Registration></h1>
        </section>
        <form name="Hostel-Registration" action="#" method="post" onsubmit="return formValidation();">

            <main id="main">

                <div>
                    <label for="ID">ID</label>
                    <input type="number" name="ID" id="" class="ID" pattern="[0-9]+" required>
                    <label for="Hostel_ID">Hostel_ID</label>
                    <input type="number" name="Hostel_ID" id="" class="HostelID" pattern="[0-9]+" required>
                    <label for="Student_ID">Student_ID</label>
                    <input type="number" name="Student_ID" id="" class="StudentID" pattern="[0-9]+" required>
                    <label for="Date">Date</label>
                    <input type="date" name="Date" id="" class="Date" required>
                    <label for="Room_ID">Room_ID</label>
                    <input type="number" name="Room_ID" id="" class="RoomID" pattern="[0-9]+" required>

                    <div style="margin: 0; margin-top: 30px;  display: flex; justify-content: space-around;">
                        <button type="submit" class="button-style">Save</button>
                        <button type="reset" class="button-style" id="btn-clear">Cancel</button>
                    </div>
                </div>
            </main>
        </form>

        <jsp:include page="sidebar.jsp"></jsp:include>

    </div>
    <script src="/static/js/script.js"></script>
</body>

</html>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.js"></script>

<script type="text/javascript">

    $(function () {
        $('.button-style').click(function () {
            var id = $(".ID").val();
            var hostelID = $(".HostelID").val();
            var studentID = $(".StudentID").val();
            var date = $(".Date").val();
            var roomID = $(".RoomID").val();

            var hostelregistration = {
                ID: id,
                HostelID: hostelID,
                StudentID: studentID,
                Date: date,
                RoomID: roomID
            }

            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: "{course:" + JSON.stringify(hostelregistration) + "}",
                url: "/Faculty/GetCourseData",
                success: function (data) {
                    alert("Data: " + data);
                },
                error: function (result) {
                    alert("Problem occured" + result);
                }
            });
        })
    });



</script>