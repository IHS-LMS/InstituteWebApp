<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/CSS/Style.css")
    <script src="https://kit.fontawesome.com/3c03c97ac7.js" crossorigin="anonymous"></script>
    <title>Teacher Coordinator</title>
</head>

<body>
    <jsp:include page="nb-faculty.jsp"></jsp:include>
    <div id="content">
        <section>
            <h1>Add Coordinator></h1>
        </section>
        <form action="#" method="post">
            <main id="main">
                <div>
                    <label for="Coordinate_ID">Coordinate_ID</label>
                    <input type="text" name="Coordinate_ID" id="" class="CoordinateID" pattern="[A-Za-z- ]+" required>
                    <label for="Teacher_ID">Teacher_ID</label>
                    <input type="text" name="Teacher_ID" id="" class="TeacherID" pattern="[A-Za-z- ]+" required>
                    <label for="Department_ID">Department_ID</label>
                    <input type="text" name="Department-ID" id="" class="DepartmentID" pattern="[A-Za-z- ]+" required>
                    <label for="Hire Date">Hire_Date</label>
                    <input type="date" name="Hire Date" id="" class="HireDate" required>

                    <div style="margin: 0; margin-top: 30px;  display: flex; justify-content: space-around;">
                        <button type="submit" class="button-style">Save</button>
                        <button type="reset" class="button-style" id="btn-clear">Cancel</button>
                    </div>
                </div>
            </main>
        </form>

        <jsp:include page="sidebar.jsp"></jsp:include>
    </div>
    <script src="/static/js/script.js"></script>
</body>

</html>


<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.js"></script>

<script type="text/javascript">

    $(function () {
        $('.button-style').click(function () {
            var coordinateID = $(".CoordinateID").val();
            var teacherID = $(".TeacherID").val();
            var departmentID = $(".DepartmentID").val();
            var hireDate = $(".HireDate").val();

            var TeacherCoordinator = {
                CoordinateID: coordinateID,
                TeacherID: teacherID,
                DepartmentID: departmentID,
                HireDate: hireDate
            }

            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: "{TeacherCoordinator:" + JSON.stringify(TeacherCoordinator) + "}",
                url: "/Faculty/GetCourseData",
                success: function (data) {
                    alert("Data: " + data);
                },
                error: function (result) {
                    alert("Problem occured" + result);
                }
            });
        })
    });



</script>