<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/CSS/Style.css")
    <script src="https://kit.fontawesome.com/3c03c97ac7.js" crossorigin="anonymous"></script>
    <title>Faculty</title>
</head>

<body>
    <jsp:include page="nb-faculty.jsp"></jsp:include>
    <div id="content">

        <section>
            <h1>Add Faculty ></h1>
        </section>

        <form name="faculty" action="#" method="post" onsubmit="return formValidation();">
            <main id="main">
                <div>
                    <label for="Faculty_Name">Faculty_Name</label>
                    <input type="text" name="Faculty_Name" id="" class="FacultyName" pattern="[A-Za-z- ]+">
                    <div style="margin: 0; margin-top: 30px;  display: flex; justify-content: space-around;">
                        <button type="submit" class="button-style">Save</button>
                        <button type="reset" class="button-style" id="btn-clear">Cancel</button>
                    </div>
                </div>
            </main>
        </form>

        <jsp:include page="sidebar.jsp"></jsp:include>
    </div>
    <script src="/static/js/script.js"></script>
</body>

</html>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.js"></script>

<script type="text/javascript">

    $(function () {
        $('.button-style').click(function () {
            var facultyname = $(".FacultyName").val();

            var index = {
                FacultyName: facultyname
            }

            $.ajax({
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: "{index:" + JSON.stringify(index) + "}",
                url: "/Faculty/GetCourseData",
                success: function (data) {
                    alert("Data: " + data);
                },
                error: function (result) {
                    alert("Problem occured" + result);
                }
            });
        })
    });



</script>